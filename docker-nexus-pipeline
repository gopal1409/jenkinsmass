pipeline {
    environment {
        registry = '20.51.217.105:8085/chatapp'
        registryCredentails = 'nexus-cred'
        dockerImage = ''
    }
    agent any

    tools {
        // Install the Maven version configured as "M3" and add it to the path.
        maven "m3"
    }

    stages {
        stage('Build') {
            steps {
                // Get some code from a GitHub repository
                 git credentialsId: 'git-ssh-key', url: 'git@github.com:gopal1409/chatapp.git'

                // Run Maven on a Unix agent.
                sh "mvn -Dmaven.test.failure.ignore=true clean package"

                // To run Maven on a Windows agent, use
                // bat "mvn -Dmaven.test.failure.ignore=true clean package"
                   }
            }
        stage('build image') {
            steps {
                script {
                    dockerImage=docker.build registry + "$BUILD_NUMBER"
                }
            }
        }
        stage('push nexus docker') {
            steps {
                script {
                    docker.withRegistry('http://20.51.217.105:8085',registryCredentials)
                    dockerImage.push()
                }
            }
        }
    }
}
